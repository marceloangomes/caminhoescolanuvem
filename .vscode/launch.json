    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:80",
            "webRoot": "./www/index.html"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost test",
            "url": "http://localhost:90",
            "webRoot": "./Test/Test.js"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost node",
            "url": "http://localhost:3000",
            "webRoot": "./server/App/app.js"
        }
    ]
}